<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_construction_material_form" model="ir.ui.view">
        <field name="name">construction.material.form</field>
        <field name="model">construction.material</field>
        <field name="arch" type="xml">
            <form string="Material de Construcción">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" options="{'size': [256, 256]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del material..." required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Información Básica">
                            <field name="code"/>
                            <field name="category"/>
                            <field name="supplier"/>
                        </group>
                        <group string="Stock">
                            <field name="quantity"/>
                            <field name="unit"/>
                            <field name="minimum_stock"/>
                            <field name="location"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notas">
                            <field name="notes" placeholder="Especificaciones técnicas, observaciones..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_construction_material_list" model="ir.ui.view">
        <field name="name">construction.material.list</field>
        <field name="model">construction.material</field>
        <field name="arch" type="xml">
            <list string="Materiales" 
                  decoration-danger="state=='out'" 
                  decoration-warning="state=='low'" 
                  decoration-success="state=='available'">
                <field name="code"/>
                <field name="name"/>
                <field name="category"/>
                <field name="quantity"/>
                <field name="unit"/>
                <field name="minimum_stock"/>
                <field name="state" widget="badge"/>
                <field name="location"/>
            </list>
        </field>
    </record>

    <record id="action_construction_material" model="ir.actions.act_window">
        <field name="name">Materiales</field>
        <field name="res_model">construction.material</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_construction_root" name="Construcción" sequence="10"/>
    <menuitem id="menu_construction_materials" name="Bodega" parent="menu_construction_root"/>
    <menuitem id="menu_materials" name="Materiales" parent="menu_construction_materials" action="action_construction_material"/>
</odoo>

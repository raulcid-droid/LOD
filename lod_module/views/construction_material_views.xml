<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tree View -->
    <record id="view_construction_material_tree" model="ir.ui.view">
        <field name="name">construction.material.tree</field>
        <field name="model">construction.material</field>
        <field name="arch" type="xml">
            <tree string="Materiales de Construcción" decoration-danger="state=='out'" decoration-warning="state=='low'" decoration-success="state=='available'">
                <field name="code"/>
                <field name="name"/>
                <field name="category"/>
                <field name="quantity"/>
                <field name="unit"/>
                <field name="minimum_stock"/>
                <field name="state" widget="badge" decoration-danger="state=='out'" decoration-warning="state=='low'" decoration-success="state=='available'"/>
                <field name="location"/>
            </tree>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_construction_material_form" model="ir.ui.view">
        <field name="name">construction.material.form</field>
        <field name="model">construction.material</field>
        <field name="arch" type="xml">
            <form string="Material">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="available,low,out"/>
                </header>
                <sheet>
                    <group>
                        <group string="Información General">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category"/>
                            <field name="supplier"/>
                        </group>
                        <group string="Stock">
                            <field name="quantity"/>
                            <field name="unit"/>
                            <field name="minimum_stock"/>
                            <field name="location"/>
                        </group>
                    </group>
                    <group string="Notas">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_construction_material_search" model="ir.ui.view">
        <field name="name">construction.material.search</field>
        <field name="model">construction.material</field>
        <field name="arch" type="xml">
            <search string="Buscar Materiales">
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <filter string="Disponible" name="available" domain="[('state','=','available')]"/>
                <filter string="Stock Bajo" name="low" domain="[('state','=','low')]"/>
                <filter string="Sin Stock" name="out" domain="[('state','=','out')]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Categoría" name="category_group" context="{'group_by':'category'}"/>
                    <filter string="Estado" name="state_group" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_construction_material" model="ir.actions.act_window">
        <field name="name">Materiales</field>
        <field name="res_model">construction.material</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer material de construcción
            </p>
        </field>
    </record>
    
    <!-- Menu -->
    <menuitem id="menu_construction_root" name="Construcción" sequence="10"/>
    <menuitem id="menu_construction_materials" name="Bodega de Materiales" parent="menu_construction_root" sequence="10"/>
    <menuitem id="menu_construction_material_list" name="Materiales" parent="menu_construction_materials" action="action_construction_material" sequence="10"/>
    
</odoo>

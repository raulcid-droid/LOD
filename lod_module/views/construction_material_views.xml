<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_construction_material_tree" model="ir.ui.view">
        <field name="name">construction.material.tree</field>
        <field name="model">construction.material</field>
        <field name="arch" type="xml">
            <tree string="Materiales" decoration-danger="state=='out'" decoration-warning="state=='low'" decoration-success="state=='available'">
                <field name="code"/>
                <field name="name"/>
                <field name="category"/>
                <field name="quantity"/>
                <field name="unit"/>
                <field name="minimum_stock"/>
                <field name="state" widget="badge"/>
                <field name="location"/>
            </tree>
        </field>
    </record>
    
    <record id="view_construction_material_form" model="ir.ui.view">
        <field name="name">construction.material.form</field>
        <field name="model">construction.material</field>
        <field name="arch" type="xml">
            <form string="Material">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category"/>
                            <field name="supplier"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="unit"/>
                            <field name="minimum_stock"/>
                            <field name="location"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="action_construction_material" model="ir.actions.act_window">
        <field name="name">Materiales</field>
        <field name="res_model">construction.material</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="menu_construction_root" name="ConstrucciÃ³n" sequence="10"/>
    <menuitem id="menu_construction_materials" name="Bodega" parent="menu_construction_root"/>
    <menuitem id="menu_materials" name="Materiales" parent="menu_construction_materials" action="action_construction_material"/>
    
</odoo>
